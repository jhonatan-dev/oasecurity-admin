<form action="/admin/obtener" method="POST" enctype="multipart/form-data">
    <div class="row">
        <div class="file-field input-field">
            <div class="btn">
                <span>File</span>
                <input id="audio_grabacion" name="audio_grabacion" type="file" accept="audio/wav">
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
            </div>
        </div>
    </div>
    <div class="row">
        <button class="btn waves-effect waves-light" type="submit" name="action">Enviar
            <i class="material-icons right">send</i>
        </button>
    </div>
</form>