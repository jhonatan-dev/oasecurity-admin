<div class="had-container">
    <div class="parallax-container registro">
        <div class="parallax"><img
                src="https://alistapart.com/wp-content/uploads/2016/01/fig-6-background-blend-mode.jpg"></div>
        <div class="row"><br>
            <div class="col m8 s12 offset-m2 center">
                <h4 class="truncate bg-card-user">
                    <div class="row register">
                        <h4>Registro</h4>
                        <form id="formRegistro" class="col m12 s12">
                            <div class="row">
                                <div class="progress" id="loader">
                                    <div class="indeterminate"></div>
                                </div>
                                <div id="div_camera">
                                    <video class="responsive-video" onloadedmetadata="onPlay(this)" id="inputVideo"
                                        autoplay muted playsinline></video>
                                    <canvas id="overlay" />
                                </div>
                                <div id="cameraControls"></div>
                            </div>
                            <div id="facesContainer" class="row col m12 s12" style="display: none;">
                            </div>
                            <div class="row">
                                <div class="input-field col m12 s12">
                                    <label for="dni">DNI</label>
                                    <input id="dni" name="dni" type="text" class="validate">
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col m12 s12">
                                    <label for="nombres">Nombres</label>
                                    <input id="nombres" name="nombres" type="text" placeholder="Nombres"
                                        class="validate" readonly>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col m12 s12">
                                    <label for="apellidos">Apellidos</label>
                                    <input id="apellidos" type="text" name="apellidos" placeholder="Apellidos"
                                        class="validate" readonly>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col m12 s12">
                                    <label for="email">Correo electrónico</label>
                                    <input id="email" type="email" name="email" class="validate">
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col m12 s12">
                                    <label for="password">Contraseña</label>
                                    <input id="password" type="password" name="password" class="validate">
                                </div>
                            </div>
                            <button class="btn waves-effect waves-light" type="submit">Enviar
                                <i class="material-icons right">send</i>
                            </button>
                        </form>
                    </div>
                </h4>
            </div>
        </div>
    </div>
</div>